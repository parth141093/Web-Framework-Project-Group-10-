<h1 class="title text-center">{{title}}</h1>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each foods}}
        <div class="col">
                <div class="card h-100 shadow">
                    <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}">
                    <div class="card-body">
                        <h5 class="card-title"><strong>{{this.name}}</strong></h5>
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <div class="card-footer">
                        <div class="footer-content">
                            <small class="text-muted average-rating">{{toFixed this.averageRating 2}} Stars</small>
                            <small class="text-muted meal-type">{{this.mealType}}</small>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="footer-content">
                            <a href="/food/edit/{{this._id}}" class="btn btn-success">
                                Edit
                            </a>
                            {{!-- <form action="/food/edit/{{this._id}}" method="post">
                                <button type="submit" class="btn btn-success">Edit</button>
                            </form> --}}
                            <form action="/food/delete/{{this._id}}" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
        </div>
        {{/each}}
    </div>
</div>

{{#isTrue isDeleted}}
<script>
    alert('Food is deleted.');
</script>
{{/isTrue}}

{{#isTrue isEdited}}
<script>
    alert('Food is edited.');
</script>
{{/isTrue}}