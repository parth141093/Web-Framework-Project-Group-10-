
    <h1>Edit food details</h1>
    <form action="/edit" method="POST">

        <label for="id">ID:</label>
        <input type="text" id="id" name="id"><br>

        <label for="name">Name:</label>
        <input type="text" id="name" name="name"><br>
        
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" ><br>
        
        <label for="ingredients">Ingredients:</label>
        <textarea id="ingredients" name="ingredients" rows="4" cols="50">{{ food.ingredients }}</textarea><br>
        
        <label for="how_to_make">How to Make:</label>
        <textarea id="how_to_make" name="how_to_make" rows="4" cols="50">{{ food.how_to_make }}</textarea><br>
        
        <label for="type_of_food">Type of Food:</label>
        <input type="text" id="type_of_food" name="type_of_food" ><br>
        
        <label for="nationality">Nationality:</label>
        <input type="text" id="nationality" name="nationality"><br>
        
        <button type="submit">Edit</button>
    </form>
