<h1>{{ food.name }}</h1>

<div class="food-details">
    <div class="food-detail">
        <h2>Description</h2>
        <p>{{ food.description }}</p>
    </div>
    <div class="food-detail">
        <h2>Ingredients</h2>
        <ul>
            {{#each food.ingredients}}
            <li>{{ this }}</li>
            {{/each}}
        </ul>
    </div>
    <div class="food-detail">
        <h2>How to Make</h2>
        <ol>
            {{#each food.how_to_make}}
            <li>{{ this }}</li>
            {{/each}}
        </ol>
    </div>
    <div class="food-detail">
        <h2>Type of Food</h2>
        <p>{{ food.type_of_food }}</p>
    </div>
    <div class="food-detail">
        <h2>Nationality</h2>
        <p>{{ this.nationality }}</p>
    </div>
    <div class="food-detail">
        <h2>Picture</h2>
        <img src="/assets/images/{{ food.picture }}.png" alt="{{ food.name }}">
    </div>
</div>
