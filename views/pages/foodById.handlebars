<div class="food-by-id-container">
    <div class="food-by-id-details">
        <h1>{{ food.name }}</h1>
        <div class="food-by-id-detail">
            <h3>Description</h3>
            <p>{{ food.description }}</p>
        </div>
        <div class="food-by-id-detail">
            <h3>Ingredients</h3>
            <ul>
                {{#each food.ingredients}}
                <li>{{ this }}</li>
                {{/each}}
            </ul>
        </div>
        <div class="food-by-id-detail">
            <h3>How to Make</h3>
            <ol>
                {{#each food.how_to_make}}
                <li>{{ this }}</li>
                {{/each}}
            </ol>
        </div>
        <div class="food-by-id-detail">
            <h3>Type of Food</h3>
            <p>{{ food.type_of_food }}</p>
        </div>
        <div class="food-by-id-detail">
            <h3>Nationality</h3>
            <p>{{ food.nationality }}</p>
        </div>
        <div class="food-by-id-detail">
            <h3>Meal Type</h3>
            <p>{{ food.mealType }}</p>
        </div>
        <div class="food-by-id-detail">
            <h3>Rating</h3>
            <p>{{ food.averageRating }} Stars</p>
        </div>
        <div class="food-by-id-detail">
            <h3>Picture</h3>
            <img src="/assets/images/{{ food.picture }}.png" alt="{{ food.name }}" style="max-width: 100%; height: auto;">
        </div>
        <form action="/food/edit/{{food._id}}" method="get">
            <button type="submit">Edit</button>
        </form>
        <form action="/food/delete/{{food._id}}" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit">Delete</button>
        </form>
        <form id="rating-form" action="/food/{{food._id}}/rate" method="POST">
            <label for="rating">Rate this food (1-5):</label>
            <select name="rating" id="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <button type="submit">Submit Rating</button>
        </form>
    </div>

    <div class="food-by-id-related">
        <h2>Related Food</h2>
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {{#each relatedFoods}}
                <div class="col">
                    <a href="/food/{{this._id}}" class="food-card-link">
                        <div class="card h-100 shadow">
                            <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}">
                            <div class="card-body">
                                <h5 class="card-title"><strong>{{this.name}}</strong></h5>
                                <p class="card-text">{{this.description}}</p>
                            </div>
                            <div class="card-footer">
                                <div class="footer-content">
                                    <small class="text-muted average-rating">{{this.averageRating}} Stars</small>
                                    <small class="text-muted meal-type">{{this.mealType}}</small>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="comments-section">
  <h2>Comments</h2>
  <ul>
    {{#each comments}}
    <li>
      {{this.content}}
    </li>
    {{/each}}
  </ul>
</div>

<form id="comment-form" action="food/comment/add" method="POST">
    <input type="hidden" name="foodId" value="{{ food._id }}">
    <textarea name="content" rows="4" cols="50" placeholder="Write your comment here"></textarea>
    <button type="submit">Submit</button>
</form>